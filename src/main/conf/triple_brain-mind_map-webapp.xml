<?xml version="1.0"?>

<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">

<Configure id="webappContext" class="org.eclipse.jetty.webapp.WebAppContext">

    <Set name="war">/home/vince/Projects/triple_brain/webapp/mind_map/target/triple_brain-mind_map-webapp-1.0.0-SNAPSHOT.war</Set>

    <Set name="contextPath">/</Set>
    <Set name="extractWAR">true</Set>
    <Set name="copyWebDir">false</Set>
    <!--
        JNDI
    -->
    <New class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>settings/application</Arg>
        <Arg>
            <New class="java.util.Properties">
                <Put name="application.debug">false</Put>
                <Put name="application.name">TripleBrainMindMapWebapp</Put>
                <Put name="ws.app">http://localhost:8080</Put>
                <Put name="ws.resource">http://localhost:8080/static</Put>
            </New>
        </Arg>
    </New>

    <New class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>settings/global</Arg>
        <Arg>
            <New class="java.util.Properties">
                <Put name="ws.resource">http://localhost:8080/res</Put>
                <Put name="ws.app">http://localhost:8080</Put>
                <Put name="ws.resource.version">1</Put>
                <Put name="cookie.domain">localhost:8080</Put>
                <Put name="caching.system">memory</Put>
            </New>
        </Arg>
    </New>

</Configure>
