<?xml version="1.0"?>

<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">

<Configure id="webappContext" class="org.eclipse.jetty.webapp.WebAppContext">

    <Set name="contextPath">/</Set>

    <New class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>settings/application</Arg>
        <Arg>
            <New class="java.util.Properties">
                <Put name="application.debug">true</Put>
                <Put name="application.name">triple_brainGraphWebapp</Put>
            </New>
        </Arg>
    </New>

    <New class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>settings/global</Arg>
        <Arg>
            <New class="java.util.Properties">
                <Put name="client.security.redirect">http://<SystemProperty name="host" default="localhost"/>:<SystemProperty name="port" default="8080"/>/login.html</Put>
                <Put name="client.security.excludes">/,/login\.html.*,/css/.*,/js/.*,/desktop/security/login\.html.*,/mobile/security/login\.html.*,/service/users/authenticate.*,/.*</Put>
                <Put name="ws.resource">http://<SystemProperty name="host" default="localhost"/>:<SystemProperty name="port" default="8080"/>/res</Put>
                <Put name="ws.app">http://<SystemProperty name="host" default="localhost"/>:<SystemProperty name="port" default="8080"/></Put>
                <Put name="ws.resource.version">1</Put>
                <Put name="cookie.domain"><SystemProperty name="host" default="localhost"/></Put>
                <Put name="security.key">user_key</Put>
                <Put name="caching.system">memory</Put>
            </New>
        </Arg>
    </New>
</Configure>
